<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="30dp"
        android:src="@drawable/man"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_profile"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/lblName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:fontFamily="@font/caviar_dreams"
                android:textColor="@android:color/black"/>

            <EditText
                android:id="@+id/txtProfileName"
                style="@android:style/TextAppearance.Material.Widget.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblName"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/caviar_dreams"
                android:inputType="textPersonName"
                tools:targetApi="lollipop"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/lblContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:fontFamily="@font/caviar_dreams"
                android:textColor="@android:color/black"
                android:layout_below="@+id/txtProfileName"/>

            <EditText
                android:id="@+id/txtProfileContact"
                style="@android:style/TextAppearance.Material.Widget.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblContact"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/caviar_dreams"
                android:inputType="number"
                tools:targetApi="lollipop"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/lblUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:fontFamily="@font/caviar_dreams"
                android:textColor="@android:color/black"
                android:layout_below="@+id/txtProfileContact"/>

            <EditText
                android:id="@+id/txtProfileUsername"
                style="@android:style/TextAppearance.Material.Widget.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblUsername"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/caviar_dreams"
                android:inputType="textPersonName"
                tools:targetApi="lollipop"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/lblPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:fontFamily="@font/caviar_dreams"
                android:textColor="@android:color/black"
                android:layout_below="@+id/txtProfileUsername"/>

            <EditText
                android:id="@+id/txtProfilePassword"
                style="@android:style/TextAppearance.Material.Widget.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblPassword"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/caviar_dreams"
                android:inputType="textPassword"
                tools:targetApi="lollipop"
                android:textColor="@android:color/black" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btnProfileUpdate"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv_setting"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:ems="15"
        android:text="Update"
        android:textSize="13dp"
        android:fontFamily="@font/caviar_dreams"
        android:textColor="@android:color/white"/>

</RelativeLayout>