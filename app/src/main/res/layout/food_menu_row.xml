<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:clickable="true"
    android:background="?selectableItemBackground"
    app:cardElevation="2dp"
    app:cardCornerRadius="1dp">

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:layout_margin="2dp">

        <TextView
            android:id="@+id/menuName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/personal_list_icon"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            android:fontFamily="monospace"
            android:text="Package"
            android:textColor="#000000"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/personal_list_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:src="@drawable/transparentbglogo" />

        <TextView
            android:id="@+id/food_package_guests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/menuName"
            android:layout_alignStart="@+id/menuName"
            android:layout_below="@+id/menuName"
            android:layout_marginTop="6dp"
            android:text="Rs. 500 per guest" />

        <TextView
            android:id="@+id/food_description"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/food_package_guests"
            android:layout_alignStart="@+id/food_package_guests"
            android:layout_below="@+id/food_package_guests"
            android:layout_marginTop="8dp"
            android:text="Small Description of the package" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:rating="3.5"
            android:stepSize="0.5"
            android:numStars="5"
            android:layout_alignLeft="@+id/food_description"
            android:layout_alignStart="@+id/food_description"
            android:layout_below="@+id/food_description"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>